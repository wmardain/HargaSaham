@model Saham
@{ 
    ViewBag.Title = ViewBag.Action + "Saham";

}

<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="NamaSaham">Name</label>
        <input asp-for="NamaSaham" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Harga">Harga</label>
        <input asp-for="Harga" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SektorId"></label>
        <select asp-for="SektorId" class="form-control">
            <option value="">Pilih jenis sektor</option>
            @foreach (Sektor sektor in ViewBag.Sektor)
            {
                <option value="@sektor.SektorId ">@sektor.Nama</option>
            }
        </select>
    </div>

    <input type="hidden" asp-for="SahamID" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>



</form>